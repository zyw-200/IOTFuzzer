#!/bin/bash
#
#
# Heng Yin <heyin@syr.edu>
#

target="i386-softmmu"
plugin_path=$(pwd)
echo plugin path is $plugin_path

decaf_path=""
show_help="yes"

for opt do
  optarg=`expr "x$opt" : 'x[^=]*=\(.*\)'`
  case "$opt" in
  --help|-h) show_help="yes"
  ;;
  --decaf-path=*) decaf_path=`readlink -e "$optarg"`; show_help="no"
  ;;
  *) echo "ERROR: unknown option $opt"; show_help="yes"
  ;;
  esac
done

if test x"$show_help" = x"yes" ; then
cat << EOF
Usage: configure [options]
Options: [defaults in brackets after descriptions]

EOF
echo "Standard options:"
echo "  --help                  print this message"
echo "  --decaf-path=PATH       path to DECAF (must be specified)"
echo ""
exit 1
fi

if [[ ! $decaf_path ]] ; then
  echo
  echo "ERROR: Path to DECAF does not exist. Please double check"
  exit
fi

echo path to DECAF is $decaf_path

#LOK: Added a test to see if libcrypto is installed - this is a dependency
#this is some crazy redirection test - should be fixed
TEST=`gcc -lcrypto 2>&1 1>/dev/null | grep "cannot find"`
if [[ $TEST ]] ; then
  echo ""
  echo "ERROR: $TEST"
  echo "ERROR:  tracecap needs libcrypto."
  echo "ERROR:  Are you sure libcrypto is installed? - Try libssl-dev"
  exit
fi

config_h="config.h"
config_mak="config-plugin.mak"
test -f $config_h && mv $config_h ${config_h}~
echo "# Automatically generated by configure - do not modify" > $config_mak

echo "TARGET_DIR=$target" >> $config_mak
echo "SRC_PATH=$decaf_path" >> $config_mak
echo "#define TRACECAP_REGRESSION 1" >>$config_h
echo "#define PLUGIN_TRACECAP" >> $config_h 
#echo "#define MEM_CHECK" >> $config_h
echo "#define DECAF_HOME \"$decaf_path\"" >> $config_h
echo "#define PLUGIN_PATH \"$plugin_path\"" >> $config_h


