$vendor	= query("/sys/vendor");
$model	= query("/sys/modelname");
$url	= query("/sys/url");
$sn		= "000000001";
$udn	= "uuid:".query("/runtime/upnpdev/root:1/uuid");

$modeldesc = $vendor." ".$model;

echo "\<\?xml version=\"1.0\"\?\>";
?>
